{
  "compilerOptions": {
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": [".eslintrc.cjs", "prettier.config.mjs", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.js"]
}
